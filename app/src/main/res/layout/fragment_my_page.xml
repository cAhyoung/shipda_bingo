<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mypage.MyPageFragment"
    android:backgroundTint="#FFFFFF"
    android:background="@drawable/mypage_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgViewProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/person"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtViewNick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:text="nickname" />

                <TextView
                    android:id="@+id/txtViewLevel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:text="Lv. 1"
                    android:textAlignment="textStart" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/btn_pho_id"
                android:text="    내정보" />

            <Button
                android:id="@+id/btnMemberInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="회원정보 조회"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/btnChangeNick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="닉네임 변경"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"/>



            <Button
                android:id="@+id/btnChangePw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="비밀번호 변경"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"/>



            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="로그아웃"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"/>



            <Button
                android:id="@+id/btnDeleteInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="회원탈퇴"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <TextView
                android:layout_width="match_parent"
                android:background="@drawable/btn_pho_id"
                android:text="    기타"
                android:layout_height="20dp"/>

            <Button
                android:id="@+id/btnHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="도움말"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"/>



            <Button
                android:id="@+id/btnAnnounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="공지사항"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"/>



        </LinearLayout>


    </LinearLayout>

</FrameLayout>